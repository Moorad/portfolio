---
import "../styles/css/projects.css";
import projects from "../data/projects.json";
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout title={"Projects - Moorad's website"} active={1}>
    <section>
        <div class="title-lg">Projects</div>
        <div class="sub-title">Lorem</div>
        <div class="filter-container">
            <div class="filter-title">Technology</div>
            <div>Technology filter here</div>
        </div>
        <div class="filter-container">
            <div class="filter-title">Category</div>
            <div>Category filter here</div>
        </div>
        <div class="structured-container">
            {
                projects.data.map((item) => (
                    <ProjectCard
                        title={item.title}
                        label={item.label}
                        description={item.description}
                        buttons={item.buttons}
                        icons={item.icons}
                        image={item.image}
                    />
                ))
            }
        </div>
    </section>
</Layout>
